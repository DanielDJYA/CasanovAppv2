<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoprincipal"
    tools:context=".RegisterUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg_ripple_contener_registro_usuarios"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="normal"
            android:textColor="@color/blanco"
            android:text="@string/registrarUsuario"
            android:textSize="30sp"
            />

        <EditText
            android:id="@+id/mEditTextNombres"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="normal"
            android:background="@drawable/bg_ripple_campos"
            android:hint="@string/ingreseNombres"
            android:textColor="@color/negro"
            android:importantForAutofill="yes"
            android:inputType="text"
            android:maxLength="20"
             />


        <EditText
            android:id="@+id/mEditTextApellidos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="normal"
            android:background="@drawable/bg_ripple_campos"
            android:hint="@string/ingreseApellidos"
            android:textColor="@color/negro"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="20"
            />
        <EditText
            android:id="@+id/mEditTextNDni"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="normal"
            android:background="@drawable/bg_ripple_campos"
            android:hint="@string/ingreseDNI"
            android:textColor="@color/negro"
            android:inputType="number"
            android:importantForAutofill="no"
            android:maxLength="8"
            />
        <EditText
            android:id="@+id/mEditTextEdad"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="normal"
            android:background="@drawable/bg_ripple_campos"
            android:hint="@string/ingreseEdad"
            android:textColor="@color/negro"
            android:inputType="number"
            android:importantForAutofill="no"
            android:maxLength="2"
            />
        <EditText
            android:id="@+id/mEditTextTelefono"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="normal"
            android:background="@drawable/bg_ripple_campos"
            android:hint="@string/ingreseTelefono"
            android:textColor="@color/negro"
            android:inputType="number"
            android:importantForAutofill="no"
            android:maxLength="9"
            />
        <EditText
            android:id="@+id/mEditTextCorreo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="normal"
            android:background="@drawable/bg_ripple_campos"
            android:hint="@string/ingreseCorreo"
            android:textColor="@color/negro"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            android:maxLength="50"
            />
        <EditText
            android:id="@+id/mEditTextContraseña"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="normal"
            android:background="@drawable/bg_ripple_campos"
            android:hint="@string/ingresePassword"
            android:textColor="@color/negro"
            android:inputType="textPassword"
            android:importantForAutofill="no"
            android:maxLength="15"
            />
        <EditText
            android:id="@+id/mEditTextConfirmarContraseña"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="normal"
            android:background="@drawable/bg_ripple_campos"
            android:hint="@string/ingreseConfirmarPassword"
            android:textColor="@color/negro"
            android:inputType="textPassword"
            android:importantForAutofill="no"
            android:maxLength="15"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/mButtonRegistrarUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textStyle="normal"
                android:background="@drawable/color_btn_entrar"
                android:textColor="@drawable/texto_btn_uno"
                android:text="@string/registrarUsuario"
                />
            <Button
                android:id="@+id/mButtonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textStyle="normal"
                android:background="@drawable/bg_ripple_btn_dos_cancelar"
                android:textColor="@drawable/texto_btn_dos"
                android:text="@string/yaTengoCuenta"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>