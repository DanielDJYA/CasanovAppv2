<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10sp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
            <TextView
                android:layout_width="132dp"
                android:layout_height="138dp"
                android:width="20dp"
                android:height="15dp"
                android:background="@drawable/fondoprincipal"
                android:gravity="center" />

        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mtextViewMensajeNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="145dp"
                android:layout_marginBottom="2dp"
                android:text="Habitacion doble"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mtextViewMensajeApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="145dp"
                android:layout_marginBottom="2dp"
                android:textSize="13sp"
                android:text="Caracteristicas: "
                />

            <TextView
                android:id="@+id/mada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="145dp"
                android:textSize="12sp"
                android:text="
•	Aire acondicionado
•	Frigobar
•	Conexion a Internet
•	Jacuzzy
•	Telefono en linea Directa
•	TV plasma satelital"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="145dp"
                android:background="@drawable/bg_ripple_btn_dos_cancelar"
                android:text="Reservar Ahora"
                android:textColor="@drawable/texto_btn_dos"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>